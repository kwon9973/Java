package randomPetubation;

import data.Data;
import java.util.ArrayList;
import java.util.List;
import java.io.FileReader;
import java.io.BufferedReader;
import java.io.File;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.*;

public class RandomPertubation {
	public static void main(String[] args) {
		
		Data data = new Data();
		
		
		
		
		try (BufferedReader fileReader = new BufferedReader(new FileReader("points/points.txt"))) {
			
			String line;
			
			File file = new File("points/points.txt");
			if (!file.exists()) {
			    System.out.println("File does not exist.");
			}
			
			while((line = fileReader.readLine()) != null) {
				String[] lineItems = line.split(",");
				System.out.print(lineItems);
				
				for (int i = 0; i < lineItems.length; i++) {
					data.setData(i, (double) Integer.parseInt(lineItems[i]));
					data.displayData();	
				}
 			}
			
			fileReader.close();
		}catch(Exception e) {
			 e.printStackTrace();
			 System.out.print(e.getMessage());
		}
		
	}
}