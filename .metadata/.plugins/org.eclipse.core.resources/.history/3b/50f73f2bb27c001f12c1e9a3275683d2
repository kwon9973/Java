package randomNumberGenerator;

import java.io.File;
import java.io.IOException;
import java.util.Random;
import java.io.FileWriter;
import java.io.BufferedReader;
import java.io.FileReader;


public class OverloadGenerator {
	
	public void overloadGenerator() {
		
		Random rand = new Random();
		double num;
		int count = 0;
		
		try(BufferedReader fileReader = new BufferedReader(new FileReader("point.txt"))){
			FileWriter myWriter = new FileWriter("points.txt");
			if (fileReader.lines() == null) {
				do {
					num = rand.nextDouble(100);
					myWriter.write(num + ",");
					count++;
				}while(count == 100);
			}else {
				File file = new File("point.txt");
				do {
					num = rand.nextDouble(100);
					myWriter.write(num + ",");
					count++;
				}while(count == 100);

			}
			myWriter.close();
			fileReader.close();
		}catch(Exception e) {
			System.out.print("failed");
		}
	}
}
