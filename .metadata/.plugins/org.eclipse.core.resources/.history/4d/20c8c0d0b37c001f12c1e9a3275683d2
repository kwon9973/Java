package randomNumberGenerator;


import java.io.File;
import java.io.IOException;
import java.util.Random;
import java.io.FileWriter;
import java.io.BufferedReader;
import java.io.FileReader;
import randomNumberGenerator.OverloadGenerator;


public class RandomNumberGenerator{
	
	public static void overloadGenerator() {
		
		Random rand = new Random();
		double num;
		int count = 0;
		
		try(BufferedReader fileReader = new BufferedReader(new FileReader("point.txt"))){
			FileWriter myWriter = new FileWriter("points.txt");
			if (fileReader.lines() == null) {
				do {
					num = rand.nextDouble(100);
					myWriter.write(num + ",");
					count++;
				}while(count == 100);
			}else {
				File file = new File("point.txt");
				do {
					num = rand.nextDouble(100);
					myWriter.write(num + ",");
					count++;
				}while(count == 100);

			}
			myWriter.close();
			fileReader.close();
		}catch(Exception e) {
			System.out.print("failed");
		}
	}
	
	
	public static void main(String[] args) {
		try{
			Random rand = new Random();
			double num;
			int count = 0;
			
			File file = new File("point.txt");
			FileWriter myWriter = new FileWriter("point.txt");
			if(file.createNewFile()) {
				System.out.print(file.getName() + "is created");
			}else {
				overloadGenerator();
			} 
			System.out.print("wrote successfully");
			myWriter.close();
			
		}catch(Exception e) {
			System.out.print(false);
		}
		
		

	}

}
